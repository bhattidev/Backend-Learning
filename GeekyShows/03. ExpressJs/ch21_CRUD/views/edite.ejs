<%- include('./partial/header.ejs') %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 mt-5">
			<h2 class="alert alert-success text-center">Update Student</h2>
			<form
				action="/student/update/<%= data._id %>"
				method="post"
				class="shadow p-4 bg-white rounded">
				<div class="mb-3">
					<label
						for="name"
						class="form-label"
						>Name</label
					>
					<input
						type="text"
						class="form-control"
						id="name"
						name="name"
						value="<%= data.name %>"
						required />
				</div>
				<div class="mb-3">
					<label
						for="age"
						class="form-label"
						>Age</label
					>
					<input
						type="number"
						class="form-control"
						id="age"
						name="age"
						value="<%= data.age %>"
						min="18"
						max="60"
						required />
				</div>
				<div class="mb-3">
					<label
						for="fees"
						class="form-label"
						>Fees</label
					>
					<input
						type="number"
						class="form-control"
						id="fees"
						name="fees"
						value="<%= data.fees %>"
						step="0.01"
						min="5000"
						required />
				</div>
				<div class="d-flex justify-content-between">
					<button
						type="submit"
						class="btn btn-warning">
						Update
					</button>
					<a
						href="/student"
						class="btn btn-secondary"
						>Back to Home</a
					>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include('./partial/footer.ejs') %>
