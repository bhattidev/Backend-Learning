<%- include('./partials/header.ejs') %>

<div class="container-fluid bg-dark text-white">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-12 col-md-3 col-lg-2 sidebar">
      <%- include('./partials/sidebar.ejs', { page_name: 'contact' }) %>
    </div>
    <!-- Main Content -->
    <div class="col-12 col-md-9 col-lg-10 px-5 mt-5">
      <h1 class="text-info">Contact Me</h1>
      <p class="mt-3">I'd love to hear from you! Feel free to reach out via the form below:</p>
      
      <!-- Contact Form -->
      <form class="mt-4">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Your Name">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" placeholder="Your Email">
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <textarea class="form-control" id="message" rows="5" placeholder="Your Message"></textarea>
        </div>
        <button type="submit" class="btn btn-warning">Send Message</button>
      </form>

      <!-- Social Media Links -->
      <div class="mt-5 text-center">
        <h3>Connect with Me</h3>
        <div class="d-flex justify-content-center mt-3">
          <a href="https://wa.me/+923106145445" target="_blank" class="btn btn-success mx-2">
            <i class="fab fa-whatsapp"></i> WhatsApp
          </a>
          <a href="https://www.linkedin.com/in/bhattidev" target="_blank" class="btn btn-primary mx-2">
            <i class="fab fa-linkedin"></i> LinkedIn
          </a>
		   <a href="https://github.com/bhattidev" target="_blank" class="btn btn-dark mx-2">
            <i class="fab fa-github"></i> GitHub
          </a>
          <a href="https://facebook.com/your-facebook" target="_blank" class="btn btn-primary mx-2">
            <i class="fab fa-facebook"></i> Facebook
          </a>
         
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
